{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"@components": ["src/lib/components"],
			"@components/*": ["src/lib/components/*"],
			"@lib": ["src/lib"],
			"@lib/*": ["src/lib/*"],
		},
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}
